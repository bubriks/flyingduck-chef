<?xml version="1.0" encoding="UTF-8"?>
<flyingduck>

  <hops>
    <namenodeServers><%= @nn_fqdn %>:<%= node['hops']['nn']['port'] %></namenodeServers>
    <trustStoreLocation>/certs/flyingduck__tstore.jks</trustStoreLocation>
    <keyStoreLocation>/certs/flyingduck__kstore.jks</keyStoreLocation>
    <keyLocation>/certs/flyingduck__passwd</keyLocation>
  </hops>
  
  <hopsworks>
    <tokenLocation>/flyingduck/etc/token</tokenLocation>
  </hopsworks>
  
  <metrics>
    <port><%= node['flyingduck']['monitoring'] %></port>
  </metrics>

</flyingduck>
