<?xml version="1.0" encoding="UTF-8"?>
<flyingduck>

  <hops>
    <namenodeServers><%= @nn_fqdn %>:<%= node['hops']['nn']['port'] %></namenodeServers>
    <trustStoreLocation>/certs/<%= node['flyingduck']['user'] %>__tstore.jks</trustStoreLocation>
    <keyStoreLocation>/certs/<%= node['flyingduck']['user'] %>__kstore.jks</keyStoreLocation>
    <keyLocation>/certs/<%= node['flyingduck']['user'] %>__passwd</keyLocation>
  </hops>

  <hopsworks>
    <tokenLocation><%= node['flyingduck']['etc'] %>/token</tokenLocation>
  </hopsworks>

  <metrics>
    <port><%= node['flyingduck']['monitoring'] %></port>
  </metrics>

</flyingduck>
